@model EntityLayer.Concrete.RoleAuthority

@{
    ViewData["Title"] = "Role Authority Details";
}

<h1>@Model.RoleAuthorityID's Details</h1>
<hr />
<div>

    <dl class="row">
        <dt class="col-sm-2">
            Role Authority ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoleAuthorityID)
        </dd>
        <dt class="col-sm-2">
            Folder Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Folder.FolderName)
        </dd>
        <dt class="col-sm-2">
            Role Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.RoleName)
        </dd>
    </dl>
    <div style="display:flex; justify-content:space-between; margin-top:15px;">
        <a href="/RoleAuthority/RoleAuthorityUpdate/@Model.RoleAuthorityID" class="btn btn-primary">Update</a>
        <a asp-action="GetRoleAuthorities" class="btn btn-light">Back to List</a>
    </div>
</div>
