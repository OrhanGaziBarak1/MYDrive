@using EntityLayer.Concrete
@model List<Folder>

<div style="display:flex; justify-content:center;">

    <a href="/Folder/AddFolder" class="btn btn-outline-secondary" style="display:flex; align-items:center;">
        <span class="material-symbols-outlined">
            add_circle
        </span>
        New Folder
    </a>
</div>

<br />

<table class="table table-striped table-hover text-center">
    <tr>
        <th>Name</th>
@*        <th>Root ID</th>*@
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FolderName</td>
@*            <td>@ViewBag.ParentFolderName</td>*@
            <td>
                <div style="display:flex; justify-content:space-evenly;">
                    <a href="/Folder/FolderUpdate/@item.FolderID" class="btn btn-outline-primary" style="display:flex; align-items:center;">
                        <span class="material-symbols-outlined">
                            edit
                        </span>
                        Edit
                    </a>
                    <a href="/Folder/FolderDetails/@item.FolderID" class="btn btn-outline-info" style="display:flex; align-items:center;">
                        <span class="material-symbols-outlined">
                            info_i
                        </span>
                        Details
                    </a>
                    <a href="/Folder/FolderDelete/@item.FolderID" class="btn btn-outline-danger" style="display:flex; align-items:center;">
                        <span class="material-symbols-outlined">
                            delete
                        </span>
                        Delete
                    </a>
                </div>

        </tr>
    }
</table>