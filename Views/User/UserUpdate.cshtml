@model EntityLayer.Concrete.User

@{
    ViewData["Title"] = "User Update";
}

<h1>User Update</h1>
<hr />
<h2>@Html.DisplayFor(x => x.UserName)</h2>

<div class="row">
    <div class="col-md-4" style="margin:auto">
        <form asp-action="UserUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:15px;">
                <label asp-for="UserID" class="control-label" hidden>ID</label>
                <input asp-for="UserID" class="form-control" hidden/>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:15px;">
                <label asp-for="UserName" class="control-label">Full Name</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:15px;">
                <label asp-for="Mail" class="control-label">Mail</label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:15px;">
                <label asp-for="Password" class="control-label" hidden>Password</label>
                <input asp-for="Password" class="form-control" hidden/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:15px;">
                <label asp-for="RoleID" class="control-label">Role Name</label>
                @Html.DropDownListFor(x => x.RoleID, (List<SelectListItem>)ViewBag.Roles, new {@class = "form-control"})
                <span asp-validation-for="RoleID" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:flex; justify-content:space-between">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

